---
import Logo from '../public/images/Lufthansa-Logo.png';

const navItems = [
    { linkText: 'Home', href: '/' },
    { linkText: 'Layover Status', href: '/' },
    { linkText: 'Milestone', href: '/' },
    { linkText: 'TaskCard Status', href: '/' },
    { linkText: 'WorkCenter Status', href: '/' },
     { linkText: 'Incoming Defect (IDD)', href: '/' },
     { linkText: 'Material Highlights', href: '/' },
     { linkText: 'Engineering Highlights', href: '/' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
